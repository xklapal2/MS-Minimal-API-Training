@page
@model FruitsModel
@{
    ViewData["Title"] = "Fruits List";
}

<h2>@ViewData["Title"]</h2>

@if (Model.FruitModels != null && Model.FruitModels.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>In Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fruit in Model.FruitModels)
            {
                <tr>
                    <td>@fruit.id</td>
                    <td>@fruit.name</td>
                    <td>@fruit.instock</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No fruits available.</p>
}
